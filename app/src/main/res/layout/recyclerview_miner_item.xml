<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="1.5023 TB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vPlotSize" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/vTimestamp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            tools:text="0.007 %"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vHistoricalShare" app:layout_constraintStart_toEndOf="@+id/vPlotSize"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            tools:text="Fr.01.03.19 17:50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vTimestamp"
            app:layout_constraintStart_toStartOf="@+id/vPlotSize" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vPlotSize" android:layout_marginBottom="8dp"
            android:textSize="12sp" android:textColor="@color/colorPrimary"/>
    <TextView
            tools:text="18.34235"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vCredit" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" android:textSize="18sp" android:textColor="@color/colorPrimaryDark"/>
</androidx.constraintlayout.widget.ConstraintLayout>